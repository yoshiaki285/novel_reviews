  <!-- ヒーローセクション -->
	<section class="hero-section position-relative">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6 p-0">
          <img src="https://images.unsplash.com/photo-1522211988038-6fcbb8c12c7e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="読みたい本" class="img-fluid mb-4 mb-lg-0">
        </div>
        <div class="col-lg-6 p-0">
          <%= image_tag 'C530F42F-60AF-4804-B3DC-29CA17277469.PNG', alt:"読んだ本", class:"img-fluid position-relative" %>
        </div>
      </div>
    </div>
  </section>
　
	<!-- コンテンツ -->
	<div class="container mt-3">
	  <h2 class="mb-3">最新のレビュー</h2>
	
	  <div class="row">
	    <% @reviews.each do |review| %>
	      <div class="col-lg-4 col-md-6 mb-4">
	        <div class="card h-100">
	          <div class="card-body">
	            <h4 class="card-title"><%= link_to review.book.title, book_path(review.book) %></h4>
	            <p class="card-text"><%= truncate(review.review, length: 100) %></p>
	          </div>
	          <div class="card-footer">
	            <%= link_to 'Read More', book_review_path(review.book, review), class: 'btn btn-primary' %>
	          </div>
	        </div>
	      </div>
	    <% end %>
	  </div>
	</div>
