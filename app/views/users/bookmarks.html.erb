<%= render 'show' %>
<div class="row justify-content-center">
  <% current_user.bookmark_books.each do |book| %>
    <div class="col-md-1 mb-3 mx-auto">
      <div class="text-center">
        <%= link_to book_path(book.isbn) do %>
          <%= image_tag book.medium_image_url %>
        <% end %>
        <div class="card-body text-center">
          <p class="card-text">
            <% if book.reviews.any? %>
              <%= link_to book_review_path(book, book.reviews), class: "btn btn-info" do %>
                <i class="far fa-comments"></i>
              <% end %>
            <% else %>
              <span class="btn btn-secondary disabled">
                <i class="far fa-comments"></i>
              </span>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

