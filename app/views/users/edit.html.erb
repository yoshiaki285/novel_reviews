<% if @user.errors.any? %>
  <div class="alert alert-denger" role="alert">
    <h4 clss="alert-heading"><%= pluralize(@user.errors.count, "error") %></h4>
    <p><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</p>
    <hr>
    <p class="mb-0">
      <%= @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </p>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>編集</h2>
      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
        <div class="form-group">
          <label>ユーザー名</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>メールアドレス</label>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div>
          <%= f.submit class: "btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>