<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <p class="h4 mb-3">レビューを書く</p>
      <div class="rating-box mt-3">
        <%= form_with model: @review, url: book_reviews_path, local: true do |f| %>
          <div class="form-group">
            <%= f.text_area :review, class: "form-control" %>
          </div>
          <div class="form-group text-left">
            <%= f.submit "投稿", class: "btn btn-primary" %>
            <%= link_to "ほかのレビューを見る", book_reviews_path(@book), class: "btn btn-secondary ml-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

