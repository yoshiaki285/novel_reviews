<div class="container mt-3">
  <h1 class="mb-3">レビュー一覧</h1>

  <div class="row">
    <% @reviews.each do |review| %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-title"><%= link_to review.book.title, book_path(review.book) %></h4>
            <p class="card-text"><%= truncate(review.review, length: 100) %></p>
          </div>
          <div class="card-footer">
            <%= link_to 'Read More', book_review_path(review.book, review), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
